<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Adoptitt</title>
  <link rel="stylesheet" href="question7style.css">
  <script src="question7.js"></script>
  <style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }
    .container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    h2 {
        text-align: center;
    }
    input[type="text"], input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        box-sizing: border-box;
    }
    input[type="submit"] {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
    input[type="submit"]:hover {
        background-color: #45a049;
    }
  </style>
</head>
<body>
  <header>
    <%- include('partials/header') %>
  </header>
  <main class="container" id="content-text">
    <h2>Create an Account</h2>
    <form action="/getUserInfo" method="POST" id="createAccountForm">
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" placeholder="Enter your username (letters and digits only)" required pattern="[A-Za-z0-9]+">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" placeholder="Enter your password (at least 4 characters with at least one letter and one digit)" required pattern="(?=.*[A-Za-z])(?=.*\d).{4,}">
      <input type="submit" value="Create Account">
    </form>
  </main>
  <footer>
    <%- include('partials/footer') %>
  </footer>
</body>
</html>
